<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/d_10"
    android:paddingTop="@dimen/d_10"
    android:orientation="horizontal">
<ImageView
    android:id="@+id/iv_title_bar_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/d_30"
    android:src="@drawable/call_record"
    />
    <TextView
        android:id="@+id/tv_title_bar_title"
        android:text="对讲监视"
        android:layout_centerInParent="true"
        android:textSize="@dimen/d_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_title_bar_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/safety_mode"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/d_30"
        />


</RelativeLayout>